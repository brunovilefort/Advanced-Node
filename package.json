{
  "name": "advanced-node",
  "version": "1.0.0",
  "description": "Aplicação avançada de Clean Architecture e TDD com TypeORM, integração com APIs de terceiros - Acompanhamento do curso Rodrigo Manguinho - Udemy",
  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config dist/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunovilefort/Advanced-Node.git"
  },
